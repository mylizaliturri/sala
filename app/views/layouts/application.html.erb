<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Sala DCC" %></title>
    <%= stylesheet_link_tag "http://code.jquery.com/ui/1.9.2/themes/cupertino/jquery-ui.css" %>
    <%= javascript_include_tag "http://code.jquery.com/jquery-1.8.3.js" %>
    <%= javascript_include_tag "http://code.jquery.com/ui/1.9.2/jquery-ui.js" %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>


    <%= yield(:head) %>

    <script>
      $(function(){
          $("button, input:submit").button();
          $("#datepicker").datepicker();
      });


    </script>

  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
